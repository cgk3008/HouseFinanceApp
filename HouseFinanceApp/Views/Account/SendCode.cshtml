@model HouseFinanceApp.Models.SendCodeViewModel
@{
	ViewBag.Title = "Send";
}

<html>
<body>


	<div class="right_col" role="main">
		<div class="">

			@*<div class="clearfix"></div>*@
			<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<div class="x_panel">
						<div class="x_title">
							<h1>Send Code<small></small></h1>
							<div class="x_content">

							</div>
							@*<div class="clearfix"></div>*@
						</div>
						<div class="x_content">
							<p class="text-muted font-13 m-b-30">

							</p>

							@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
							{
								@Html.AntiForgeryToken()
								@Html.Hidden("rememberMe", @Model.RememberMe)
								<h4>Send verification code</h4>
								<hr />
								<div class="row">
									<div class="col-md-8">
										Select Two-Factor Authentication Provider:
										@Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
										<input type="submit" value="Submit" class="btn btn-default" />
									</div>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
	}
</body>
</html>
