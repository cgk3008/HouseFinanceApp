@model IEnumerable<HouseFinanceApp.Models.PersonalAccount>

@{
	ViewBag.Title = "HouseAccounts";
}


<html>
<body>


	<div class="right_col" role="main">
		<div class="">

			@*<div class="clearfix"></div>*@
			<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<div class="x_panel">
						<div class="x_title">
							<h1>@*@Html.DisplayFor(m => m.Where(model.))*@My Household Accounts <small></small></h1>
							<div class="x_content">

							</div>
							@*<div class="clearfix"></div>*@
						</div>
						<div class="x_content">
							<p class="text-muted font-13 m-b-30">

							</p>
						</div>

						<div class="row">
							<div class="col-md-12">
								<div class="container">
									<table id="mytable" class="dataTables" style="width:100%">
										<thead>
											<tr>
												<th>
													@Html.DisplayNameFor(model => model.Name)
												</th>
												<th>
													@Html.DisplayNameFor(model => model.Balance)
												</th>
												<th>
													@Html.DisplayNameFor(model => model.ReconciledBalance)
												</th>
												<th>
													@Html.DisplayNameFor(model => model.CreatedBy)
												</th>
												<th>
													Link to Account Transactions
												</th>
											</tr>
										</thead>
										<tbody>
											@foreach (var item in Model)
											{
												@Html.HiddenFor(modelItem => item.Id)


												if (item.IsDeleted == false)

												{
													<tr>
														<td>
															@Html.DisplayFor(modelItem => item.Name)
														</td>
														<td>
															@Html.DisplayFor(modelItem => item.Balance)
														</td>
														<td>
															@Html.DisplayFor(modelItem => item.ReconciledBalance)
														</td>
														<td>
															@Html.DisplayFor(modelItem => item.CreatedById)
														</td>
														<td>
															@Html.ActionLink("Go to Transactions", "AccountTransactions", "Transactions", new { id = item.Id }, null)
														</td>
													</tr>

												}
											}

										</tbody>
									</table>

									<script>
										$('#mytable').DataTable();
									</script>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div>
			@Html.ActionLink("Back to Dashboard", "Index", "Home", null, new { @class = "btn btn-default" })
		</div>
	</div>
	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
	}
</body>
</html>