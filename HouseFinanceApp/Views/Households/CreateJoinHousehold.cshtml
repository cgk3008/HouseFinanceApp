@model HouseFinanceApp.Models.HouseholdViewModel

@{
	ViewBag.Title = "View";
}
<html>
<body>
	<div class="right_col" role="main">
		<div class="">

			@*<div class="clearfix"></div>*@
			<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<div class="x_panel">
						<div class="x_title">
							<h1>Create or Join Household <small></small></h1>
							<div class="x_content">

							</div>
							@*<div class="clearfix"></div>*@
						</div>
						<div class="x_content">
							<p class="text-muted font-13 m-b-30">

							</p>

							@if (Model.IsJoinHouse)
							{
								using (Html.BeginForm("JoinHousehold", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
								{
									@Html.AntiForgeryToken()
									@Html.HiddenFor(model => model.HHId)
									<h4>Welcome to the <strong>@Model.HHName</strong> household.  Click the <a class="btn-xs btn-info">JOIN</a> below.</h4>
									<hr />
									@Html.ValidationSummary("", new { @class = "text-danger" })
									<div class="form-group">
										@*@Html.LabelFor(m => m.HHName, new { @class = "col-md-2 control-label" })
											<div class="col-md-4">
												@Html.TextBoxFor(m => m.HHName, new { @class = "form-control disabled" })
											</div>*@
									</div>
									<div class="form-group">
										<div class="col-md-offset-2 col-md-10">
											<input type="submit" class="btn btn-default" value="JOIN" />
										</div>
									</div>
								}
							}
							else
							{
								<h2>Create Household</h2>
								using (Html.BeginForm("CreateHousehold", "Households", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
								{
									@Html.AntiForgeryToken()
									<h4>Create a new account.</h4>
									<hr />
									@Html.ValidationSummary("", new { @class = "text-danger" })
									<div class="form-group">
										@Html.LabelFor(m => m.HHName, new { @class = "col-md-2 control-label" })
										<div class="col-md-4">
											@Html.TextBoxFor(m => m.HHName, new { @class = "form-control" })
										</div>
									</div>
									<div class="form-group">
										<div class="col-md-offset-2 col-md-10">
											<input type="submit" class="btn btn-default" value="Submit" />
										</div>
									</div>
								}
							}

							<div>
								@Html.ActionLink("Back to List", "Index")
							</div>


						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div>
		@Html.ActionLink("Back to List", "Index")
	</div>

	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
	}
</body>
</html>

