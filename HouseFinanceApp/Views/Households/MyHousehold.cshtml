@model HouseFinanceApp.Models.HouseholdViewModel

@{
	ViewBag.Title = "MyHousehold";
}


<html>
<body>


	<div class="right_col" role="main">
		<div class="">

			@*<div class="clearfix"></div>*@
			<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<div class="x_panel">
						<div class="x_title">
							<h1>@Html.LabelFor(model => model.HHName, htmlAttributes: new { @class = "control-label col-md-2" }) <small></small></h1>
							<div class="x_content">

							</div>
							@*<div class="clearfix"></div>*@
						</div>
						<div class="x_content">
							<p class="text-muted font-13 m-b-30">

							</p>






							@using (Html.BeginForm("Invite", "Invites", FormMethod.Post))
							{
								@Html.AntiForgeryToken()
								@Html.HiddenFor(model => model.HHId)

								<div class="form-horizontal">
									<h4>Invite</h4>
									<hr />
									@Html.ValidationSummary(true, "", new { @class = "text-danger" })
									@*<div class="form-group">
											Household ID
											<div class="col-md-10">

												@Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
											</div>
										</div>*@

									<div class="form-group">
										@Html.LabelFor(model => model.EmailForInvitedResident, null, "Email for invitee")
									
										<div class="col-md-10">
											@Html.EditorFor(model => model.EmailForInvitedResident, new { htmlAttributes = new { @class = "form-control" } })
											@Html.ValidationMessageFor(model => model.EmailForInvitedResident, "", new { @class = "text-danger" })
										</div>
									</div>
									<div class="form-group">
										<div class="col-md-offset-2 col-md-10">
											<input type="submit" value="Send Invite" class="btn btn-default" />
										</div>
									</div>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>

		<div>
			@Html.ActionLink("Back to Dashboard", "Index", "Home", new { @class = "btn btn-default" })
		</div>
	</div>
	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
	}
</body>
</html>